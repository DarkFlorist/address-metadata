{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"moduleResolution": "node",
		"rootDir": ".",
		"esModuleInterop": true,
		"outDir": "./output",
		"sourceMap": false,
		"inlineSources": false,
		"declaration": true,
		"declarationMap": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitThis": true
	},
	"include": [
		"./*.ts"
	],
	"exclude": [
		"node_modules"
	],
	"ts-node": {
		"esm": true,
	}
}
